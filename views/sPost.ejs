<% include header %>
    <div class="spost">
        <p class="spost_user">作者: <a href="/posts?author=<%= posts[0]['name'] %>"><%= posts[0]['name'] %></a></p>
        <div class="post_title">
            <h3>标题</h3>
            <p><a href="/posts/<%= posts[0]['id'] %>"><%= posts[0]['title'] %></a></p>
        </div>
        <div class="post_content">
            <h3>正文</h3>
            <p><%= posts[0]['content'] %></p>
        </div>
        <div class="edit">
            <% if(session && session.user ===  posts[0]['name']  ){ %>
            <p><a href="<%= posts[0]['id'] %>/edit">编辑</a></p>
            <p><a class="delete_post">删除</a></p>
            <% } %>
        </div>
    </div>
    <div class="comment_wrap">
        <h3>请留下您的评论: </h3>
        <div class="comment_list">
            <% comments.forEach(function(res){ %>
                <div class="cmt_lists">
                    <p></p>
                    <p class="cmt_content">
                        content: <%= res['content'] %>
                        <span class="cmt_name">
                            By: <%= res['name'] %>
                            <% if(session && session.user ===  res['name']  ){ %>
                                <a class="delete_comment"> 删除</a>
                            <% } %>
                        </span>
                    </p>
                </div>
            <% }) %>
        </div>
        <% if(session.user){ %>
        <form class="form" method="post" action="/<%= posts[0]['id'] %>">
            <textarea name="content" id=""></textarea>
            <div class="submit">发表留言</div>
        </form>
        <% } %>
    </div>
    <script type="text/javascript" src="/js/sPost.js"></script>
<% include footer %>